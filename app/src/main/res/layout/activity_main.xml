<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/spotify_app"
        android:layout_marginTop="33dp"
        android:backgroundTint="#ffff9017"
        android:background="#fff08c35"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="spotify_clicked"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scores_app"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/spotify_app"
        android:layout_alignLeft="@+id/spotify_app"
        android:layout_alignStart="@+id/spotify_app"
        android:layout_alignRight="@+id/spotify_app"
        android:layout_alignEnd="@+id/spotify_app"
        android:background="#F08C35"
        android:onClick="scores_clicked"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/library_app"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/scores_app"
        android:layout_alignLeft="@+id/scores_app"
        android:layout_alignStart="@+id/scores_app"
        android:layout_alignRight="@+id/scores_app"
        android:layout_alignEnd="@+id/scores_app"
        android:background="#F08C35"
        android:onClick="library_clicked"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/build_app"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/library_app"
        android:layout_alignLeft="@+id/library_app"
        android:layout_alignStart="@+id/library_app"
        android:layout_alignRight="@+id/library_app"
        android:layout_alignEnd="@+id/library_app"
        android:background="#F08C35"
        android:onClick="build_clicked"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyz_app"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/build_app"
        android:layout_alignRight="@+id/build_app"
        android:layout_alignEnd="@+id/build_app"
        android:layout_alignLeft="@+id/build_app"
        android:layout_alignStart="@+id/build_app"
        android:background="#F08C35"
        android:onClick="xyz_clicked"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE"
        android:id="@+id/capstone_app"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/xyz_app"
        android:layout_alignLeft="@+id/xyz_app"
        android:layout_alignStart="@+id/xyz_app"
        android:layout_alignRight="@+id/xyz_app"
        android:layout_alignEnd="@+id/xyz_app"
        android:background="#ffff0900"
        android:onClick="capstone_clicked"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nanodegree Apps"
        android:id="@+id/textView"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
